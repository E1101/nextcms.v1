$this->headTitle()->set($this->translator()->_('flickr.set.title'));
?>

<?php if (!$this->sets || count($this->sets) == 0) : ?>
	<div class="app-center">
		<div><?php echo $this->translator()->_('flickr.set.notFound'); ?></div>
	</div>
<?php else : ?>

	<ul class="module-media-flickr-sets">
		<?php foreach ($this->sets as $set) : ?>
		<li class="module-media-flickr-set" data-app-set="<?php echo $set['id']; ?>">
			<img src="<?php echo $set['thumb']; ?>" title="<?php echo addslashes($set['title']['_content']); ?>" /> <?php echo $set['title']['_content']; ?>
			(<?php echo $set['photos']; ?>)
			<div class="app-clear"></div>
		</li>
		<?php endforeach; ?>
	</ul>
	
<?php endif; ?>
